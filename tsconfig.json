{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule": true,
    "esModuleInterop": false,
    "paths": {
      "@shared/common": ["src/shared/common"],
      "@shared/configuration": ["src/shared/configuration"],
      "@shared/cache-module": ["src/shared/cache-module"]
    }
  },
  "exclude": ["dist", "test"]
}
